<?xml version="1.0" encoding="utf-8" ?>
<ContentView xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             xmlns:toolkit="http://schemas.microsoft.com/dotnet/2022/maui/toolkit"
             xmlns:vm="clr-namespace:SemanticImageSearchAIPCT.UI.ViewModels"
             x:Class="SemanticImageSearchAIPCT.UI.Controls.EpSelectionView">
    <ContentView.BindingContext>
        <vm:EpSelectionViewModel />
    </ContentView.BindingContext>
    <VerticalStackLayout>
        <Label 
            Text="Welcome to .NET MAUI!"
            VerticalOptions="Start" 
            HorizontalOptions="Start" />
        <HorizontalStackLayout RadioButtonGroup.GroupName="eps" RadioButtonGroup.SelectedValue="{Binding SelectedEp}">
            <RadioButton GroupName="eps" Content="Cpu" Value="Cpu" />
            <RadioButton GroupName="eps" Content="Qnn Cpu" Value="QnnCpu" />
            <RadioButton GroupName="eps" Content="Qnn Htp" Value="QnnHtp" />
            <Button Text="Set EP" Command="{Binding SetEpCommand}" />
        </HorizontalStackLayout>
    </VerticalStackLayout>
</ContentView>
