<?xml version="1.0" encoding="utf-8" ?>
<ContentView xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             xmlns:toolkit="http://schemas.microsoft.com/dotnet/2022/maui/toolkit"
             xmlns:vm="clr-namespace:SemanticImageSearchAIPCT.UI.ViewModels"
             x:Class="SemanticImageSearchAIPCT.UI.Controls.FilterTextView">
    <ContentView.BindingContext>
        <vm:SearchViewModel />
    </ContentView.BindingContext>
    <VerticalStackLayout>
        <Label Text="Type or use the mic to describe what type of images you want to find." Margin="0, 0, 0, 10" />
        <HorizontalStackLayout>
            <Entry WidthRequest="250" Margin="0, 0, 20, 0" Text="{Binding OutputText}"></Entry>
            <Button Text="Mic" Command="{Binding MicCommand}" />
        </HorizontalStackLayout>
    </VerticalStackLayout>
</ContentView>
