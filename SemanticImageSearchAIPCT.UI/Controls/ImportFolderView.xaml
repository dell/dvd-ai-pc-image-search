<?xml version="1.0" encoding="utf-8" ?>
<ContentView xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             xmlns:vm="clr-namespace:SemanticImageSearchAIPCT.UI.ViewModels"
             x:Class="SemanticImageSearchAIPCT.UI.Controls.ImportFolderView">
    <ContentView.BindingContext>
        <vm:ImportImagesViewModel />
    </ContentView.BindingContext>
    <VerticalStackLayout>
        <Label Text="Please import a folder of images to perform semantic search on." Margin="0, 0, 0, 10"/>
        <Button Text="Import"  Command="{Binding PickFolderCommand}">
            <Button.Triggers>
                <DataTrigger TargetType="Button" Binding="{Binding IsProcessing}" Value="True">
                    <Setter Property="IsEnabled" Value="False" />
                </DataTrigger>
            </Button.Triggers>
        </Button>
    </VerticalStackLayout>
</ContentView>
