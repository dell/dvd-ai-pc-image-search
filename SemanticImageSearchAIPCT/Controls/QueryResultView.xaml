<?xml version="1.0" encoding="utf-8" ?>
<ContentView xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             xmlns:toolkit="http://schemas.microsoft.com/dotnet/2022/maui/toolkit"
             xmlns:vm="clr-namespace:SemanticImageSearchAIPCT.ViewModels"
             x:Class="SemanticImageSearchAIPCT.Controls.QueryResultView">
    <ContentView.BindingContext>
        <vm:QueryResultsViewModel />
    </ContentView.BindingContext>
    <Grid RowDefinitions="Auto, Auto">
        <Label Text="{Binding CurrentQueryText, FallbackValue=''}" 
            FontAttributes="Bold"
            LineBreakMode="TailTruncation"
            Padding="10, 5, 0, 5"
            Grid.Row="0"/>
        <CollectionView ItemsSource="{Binding ImageResults}" Grid.Row="1" HeightRequest="425">
            <CollectionView.ItemTemplate>
                <DataTemplate x:DataType="x:String">
                    <Grid RowDefinitions="Auto, Auto">
                        <Image Source="{Binding}" Aspect="AspectFit" Grid.Row="0"/>
                        <Label Text="" Grid.Row="1"/>
                    </Grid>
                </DataTemplate>
            </CollectionView.ItemTemplate>
        </CollectionView>
    </Grid>
</ContentView>
