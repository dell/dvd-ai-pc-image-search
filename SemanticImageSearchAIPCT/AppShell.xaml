<?xml version="1.0" encoding="UTF-8" ?>
<Shell
    x:Class="SemanticImageSearchAIPCT.AppShell"
    xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
    xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
    xmlns:views="clr-namespace:SemanticImageSearchAIPCT.Views"
    Shell.FlyoutBehavior="Disabled"
    Shell.NavBarIsVisible="False"
    Title="Semantic Image Search">

    <TabBar>
        <ShellContent
            Title="Search"
            ContentTemplate="{DataTemplate views:SearchPage}"
            />

        <ShellContent
            Title="About"
            ContentTemplate="{DataTemplate views:AboutPage}"
            />

        <ShellContent
            Title="Debug"
            ContentTemplate="{DataTemplate views:DebugLogPage}"
            />
    </TabBar>

</Shell>
