<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             xmlns:viewModels="clr-namespace:SemanticImageSearchAIPCT.ViewModels"
             x:Class="SemanticImageSearchAIPCT.Views.DebugLogPage">
    <ContentPage.BindingContext>
        <viewModels:DebugLogViewModel />
    </ContentPage.BindingContext>
    <VerticalStackLayout Spacing="10" Margin="10">
        <Label Text="{Binding Title}" VerticalOptions="End" />
        <Editor IsReadOnly="True" Text="{Binding LogText}" HeightRequest="650" FontSize="12"/>
    </VerticalStackLayout>
</ContentPage>